<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReportActivity">
    <LinearLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:background="@drawable/toolbar_shape"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mosafir_kams"
            android:textSize="20sp"
            android:fontFamily="@font/ceragr_medium"
            android:textColor="@android:color/white"
            android:textStyle="bold"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/one"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_shape"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">


        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/start_date"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:background="@null"
            android:focusable="true"
            android:inputType="none"
            android:clickable="true"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginStart="8dp"
            android:hint="@string/from_date"
            tools:ignore="Autofill,TextFields" />
    </LinearLayout>
    <LinearLayout
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:id="@+id/two"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/one"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/edittext_shape"
        android:gravity="center_vertical"
        android:layout_marginBottom="12dp">
        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/end_date"
            android:layout_weight="1"
            android:textColor="@android:color/black"
            android:background="@null"
            android:focusable="true"
            android:inputType="none"
            android:clickable="true"
            android:textColorHint="@color/colorPrimary"
            android:layout_marginStart="8dp"
            android:hint="@string/to_date"
            tools:ignore="Autofill,TextFields" />
    </LinearLayout>

    <Button
        android:id="@+id/findReport"
        android:text="@string/find_report"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/two"
        app:layout_constraintEnd_toEndOf="@id/two"
        app:layout_constraintStart_toStartOf="@id/two"
        android:layout_width="0dp"
        android:layout_height="wrap_content"/>
    <ListView
        app:layout_constraintEnd_toEndOf="@id/two"
        app:layout_constraintStart_toStartOf="@id/two"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/findReport"
        android:layout_width="0dp"
        android:id="@+id/listView"
        android:layout_height="wrap_content"/>
</androidx.constraintlayout.widget.ConstraintLayout>